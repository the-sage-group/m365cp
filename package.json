{
  "name": "mcp-microsoft365-graph",
  "version": "1.0.0",
  "description": "MCP server for Microsoft 365 Graph API",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./tools": "./dist/tools/index.js"
  },
  "typesVersions": {
    "*": {
      "tools": [
        "dist/tools/index.d.ts"
      ]
    }
  },
  "bin": {
    "mcp-microsoft365-graph": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "DEBUG=m365:* tsx watch src/index.ts"
  },
  "keywords": [
    "mcp",
    "microsoft365",
    "graph-api",
    "microsoft-graph"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/debug": "^4.1.12",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "isomorphic-fetch": "^3.0.0",
    "puppeteer": "^24.32.0",
    "sanitize-filename": "^1.6.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
